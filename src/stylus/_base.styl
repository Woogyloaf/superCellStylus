// ***********************************
// BASE
// ***********************************
html
  box-sizing: border-box
*, *:before, *:after
  box-sizing: inherit
html
  overflow-y: scroll
body
  color: $body-text
  margin: 0
  padding: 0
  background: #f5f5f5
  font-weight: $font-weight-body
  font-family: $font-family-primary
  // media query mixin, see _mixins.scss
  desktop()
hr
  border: solid #DDDDDD
  border-width: 1px 0 0
  clear: both
  height: 0
  margin: 40px 0

for $i in 1..4
  .sprite-santa-{$i}
    sprite($s-santa-claus-2)
    background-color orange - (100 / $i)